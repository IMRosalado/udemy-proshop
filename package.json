{
  "name": "proshop",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build": "npx tsc  && copyfiles uploads/* dist",
    "start": "node dist/server.js",
    "server": "nodemon dist/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node dist/seeder.js",
    "data:destroy": "node dist/seeder.js -d",
    "build:prod": "npm install && npm install --prefix frontend && npm run build --prefix frontend && npx tsc && copyfiles frontend/build/**/* dist"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.4.3",
    "multer": "^1.4.5-lts.1"
  }
}
